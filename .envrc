#!/usr/bin/env sh
unset GOPATH GOROOT
use flake
if [ -f ./.env ]; then export $(grep -ve '^[[:space:]]*#' ./.env); fi
export PYTHON_KEYRING_BACKEND=keyring.backends.null.Keyring
# ^ see https://github.com/python-poetry/poetry/issues/1917#ref-issue-1533856414
VIRTUAL_ENV=""
VIRTUAL_ENV="$(poetry env list --full-path | head -1 | awk '{print $1}')"
export VIRTUAL_ENV
export PATH="$VIRTUAL_ENV/bin:$PATH"
